{
	"compilerOptions": {
		"lib": [
			"es5",
			"es6",
			"dom"
		],
		"rootDir": "./",
		"outDir": "./dist",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@http/*": [
				"http/*"
			],
			"@controllers/*": [
				"http/controllers/*"
			],
			"@repositories/*": [
				"src/repositories/*"
			],
			"@models/*": [
				"src/models/*"
			]
		}
	},
	"exclude": [
		"./node_modules",
		"./docs",
		"./assets"
	]
}